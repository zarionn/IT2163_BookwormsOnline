@page
@model WebApplication1.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>Change Password</h2>

@if (TempData["FlashMessage"] != null)
{
    <div class="alert alert-warning">@TempData["FlashMessage"]</div>
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.OldPassword"></label>
        <input asp-for="Input.OldPassword" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="Input.NewPassword"></label>
        <input asp-for="Input.NewPassword" class="form-control" type="password" />
        <small class="form-text text-muted">Must be at least 12 chars with upper, lower, number, and special char.</small>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update Password</button>
</form>