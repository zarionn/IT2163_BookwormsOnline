@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    @if (Model.CurrentUser == null)
    {
        <div class="alert alert-warning">
            Please login to view your profile.
        </div>
    }
    else
    {
        <h2 class="mb-3">Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h2>

        <div class="card p-3">
            <p><strong>First Name:</strong> @Model.CurrentUser.FirstName</p>
            <p><strong>Last Name:</strong> @Model.CurrentUser.LastName</p>
            <p><b>Email:</b> @Model.CurrentUser.Email</p>
            <p><b>Mobile No:</b> @Model.CurrentUser.MobileNo</p>
            <p><b>Billing Address:</b> @Model.CurrentUser.BillingAddress</p>
            <p><b>Shipping Address:</b> @Model.CurrentUser.ShippingAddress</p>

            <p><b>Credit Card (Decrypted):</b> @Model.DecryptedCreditCard</p>

            @if (!string.IsNullOrEmpty(Model.CurrentUser.PhotoPath))
            {
                <div class="mt-3">
                    <b>Photo:</b><br />
                    <img src="@Model.CurrentUser.PhotoPath"
                         class="img-thumbnail mt-2"
                         style="max-width: 200px;" />
                </div>
            }
        </div>
    }
</div>
