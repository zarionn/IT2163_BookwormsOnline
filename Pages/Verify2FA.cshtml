@page
@model WebApplication1.Pages.Verify2FAModel
@{
    ViewData["Title"] = "Verify 2FA";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h2 class="mb-4">Two-Factor Auth</h2>
                    <p class="text-muted">Enter the 6-digit code sent to your email.</p>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <input asp-for="InputCode" class="form-control form-control-lg text-center"
                                   placeholder="000000" maxlength="6" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 btn-lg">Verify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>